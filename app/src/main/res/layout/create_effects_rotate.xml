<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <android.support.v7.widget.AppCompatImageButton
        android:id="@+id/create_effects_rotate_refresh"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="?android:attr/selectableItemBackground"
        android:src="@drawable/ic_refresh_white_18dp"
        />

    <com.quotam.custom.CustomSeekBar
        android:id="@+id/create_effects_rotate_seekbar"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_centerInParent="true"
        android:layout_marginEnd="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginStart="10dp"
        android:layout_toLeftOf="@id/create_effects_rotate_refresh"
        android:splitTrack="false"
        android:clickable="true"
        android:max="100"
        android:maxHeight="80dp"
        android:minHeight="80dp"
        android:progress="50"
        android:progressDrawable="@color/transparent"
        android:thumb="@drawable/custom_seekbar_thumb"/>
    />

</RelativeLayout>
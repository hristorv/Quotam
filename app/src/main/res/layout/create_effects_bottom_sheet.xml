<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/create_effects_bottom_sheet_base"
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="@color/primary_color"
                android:clickable="true"
                android:visibility="gone">

    <android.support.v7.widget.AppCompatImageButton
        android:id="@+id/create_effects_bottom_sheet_close"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:background="?android:attr/selectableItemBackground"
        android:src="@drawable/ic_close_white_18dp"
        />

    <android.support.v7.widget.AppCompatImageButton
        android:id="@+id/create_effects_bottom_sheet_done"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:background="?android:attr/selectableItemBackground"
        android:src="@drawable/ic_done_white_18dp"
        />

    <android.support.v7.widget.AppCompatImageButton
        android:id="@+id/create_effects_bottom_sheet_custom_button"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_toLeftOf="@id/create_effects_bottom_sheet_done"
        android:layout_alignParentTop="true"
        android:layout_marginTop="5dp"
        android:background="?android:attr/selectableItemBackground"
        android:visibility="gone"
        />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/create_effects_bottom_sheet_title"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:textColor="@color/primary_text_color"
        android:textSize="15sp"
        android:textStyle="bold"
        android:layout_marginTop="5dp"
        />

    <FrameLayout
        android:id="@+id/create_effects_bottom_sheet_content"
        android:layout_width="match_parent"
        android:layout_height="125dp"
        android:layout_below="@id/create_effects_bottom_sheet_done"/>


</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/stepper_item_base"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:gravity="center"
    android:orientation="vertical"
    >

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/stepper_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="3dp"
        android:gravity="center"
        android:textAlignment="gravity"
        android:includeFontPadding="false"
        android:textColor="@color/disabled_text_color"
        android:textSize="16dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <View
            android:id="@+id/stepper_left_line"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="@color/disabled_text_color"/>

        <RelativeLayout
            android:id="@+id/stepper_item_icon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/circle_step_background"
            android:gravity="center"
            >

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/stepper_item_icon_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:alpha="1.0"
                android:gravity="center"
                android:includeFontPadding="false"
                android:textColor="@color/disabled_text_color"
                android:textSize="10dp"
                />

            <ImageView
                android:id="@+id/stepper_icon_done"
                android:layout_width="11dp"
                android:layout_height="11dp"
                android:layout_centerInParent="true"
                android:alpha="0.0"
                android:src="@drawable/ic_done_white_18dp"
                />

        </RelativeLayout>

        <View
            android:id="@+id/stepper_right_line"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:background="@color/disabled_text_color"/>

    </LinearLayout>


</LinearLayout>
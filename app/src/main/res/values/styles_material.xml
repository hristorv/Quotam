<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="Theme.CustomMaterial" parent="Theme.AppCompat.Light.NoActionBar">

        <item name="colorPrimary">@color/primary_color</item>

        <item name="colorPrimaryDark">@color/dark_primary_color</item>


        <item name="colorAccent">@color/accent_color</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="android:scrollbarThumbVertical">@drawable/scrollbar_vertical_thumb</item>
        <item name="android:textColorSecondary">@color/secondary_text_color</item>
        

        <item name="fontFamily">@font/coming_soon</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
    </style>

    <style name="ToolbarTitle" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="FullscreenDialog" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowIsFloating">false</item>
    </style>

    <style name="DrawerSeparator">
        <item name="android:listDivider">@color/drawer_divider</item>
    </style>

    <style name="ExpandedToolbarTitle" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ExpandedToolbarTitleAlbum" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ExpandedToolbarTitleAccount" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="DrawerItem">
        <item name="android:textSize">15sp</item>
    </style>

    <style name="CustomDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!-- Used for the buttons -->
        <item name="colorAccent">@color/accent_color</item>
        <!-- Used for the title and text -->
        <item name="android:textColorPrimary">@color/primary_text_color</item>
        <item name="android:textColorSecondary">@color/secondary_text_color</item>
        <item name="textColorAlertDialogListItem">@color/primary_text_color</item>
        <!-- Used for the background -->
        <item name="android:background">@color/primary_color</item>
    </style>

    <style name="TabItem">
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CounterStyle" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">@color/primary_text_color_dark</item>

    </style>
    <style name="OverflowCounterStyle" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">@color/accent_color</item>
    </style>

    <style name="CustomSwitch">
        <item name="colorControlActivated">@color/primary_color</item>
    </style>

</resources>